{
  "name": "jam",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "init-start": "esbuild --splitting --bundle ./App.jsx ./bundling/*.js --outdir=./public/js --format=esm --target=es6 --define:process.env.NODE_ENV='\"development\"'",
    "start": "yarn run init-start && JAM_SFU=1 DEVELOPMENT=1 server/bin/www.js & tailwindcss -o public/css/tailwind.css --watch & esbuild --splitting --bundle ./App.jsx ./bundling/*.js --outdir=./public/js --format=esm --target=es6 --define:process.env.NODE_ENV='\"development\"' --watch",
    "start-production": "server/bin/www.js & tailwindcss -o public/css/tailwind.css --watch & esbuild --splitting --bundle ./App.jsx ./bundling/*.js --outdir=./public/js --format=esm --target=es6 --define:process.env.NODE_ENV='\"production\"' --minify --watch",
    "build": "tailwindcss --minify -o public/css/tailwind.css && esbuild --splitting --bundle ./App.jsx ./bundling/*.js --outdir=./public/js --minify --format=esm --target=es6 --define:process.env.NODE_ENV='\"production\"'",
    "pantry": "LOCAL=1 PORT=3001 JAM_SFU=1 node ../pantry/bin/www.js",
    "debug": "JAM_PANTRY_URL=http://localhost:3001 yarn start",
    "start-example": "serve -s ./jam-react/example & esbuild --bundle ./jam-react/example/App.jsx --outfile=./jam-react/example/bundle.js --format=esm --define:process.env.NODE_ENV='\"development\"' --watch --loader:.css=text"
  },
  "private": true,
  "workspaces": [
    "packages/jam-core",
    "packages/jam-core-react",
    "examples/minimal-jam-bundled",
    "examples/tiny-jam-react"
  ],
  "devDependencies": {
    "@types/react": "^17.0.11",
    "autoprefixer": "^10.2.6",
    "ejs": "^3.1.6",
    "esbuild": "^0.12.5",
    "eslint": "^7.19.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "express": "^4.17.1",
    "ical-generator": "^2.0.0-develop.14",
    "node-fetch": "^2.6.1",
    "postcss": "^8.3.5",
    "serve": "^11.3.2",
    "tailwindcss": "^2.2.4"
  },
  "license": "AGPL-3.0",
  "dependencies": {
    "@vvo/tzdb": "^6.5.1",
    "fast-base64": "^0.1.6",
    "mediasoup-client": "^3.6.31",
    "minimal-state": "^5.6.0",
    "qs": "^6.9.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-markdown": "^5.0.3",
    "remark-gfm": "1.0.0",
    "slugify": "^1.4.6",
    "spark-md5": "^3.0.1",
    "tweetnacl": "^1.0.3",
    "ua-parser-js": "^0.7.24",
    "use-minimal-state": "^3.5.0",
    "watsign": "^0.1.4"
  }
}
